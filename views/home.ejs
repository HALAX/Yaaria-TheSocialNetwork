    <h1>
            Yaaria - <%= title%>
    </h1>

    <section id="feed-posts">
            <h4>Posts</h4>
            <% if(locals.user) {%>
            <form action="/posts/create" id="new-post-form" method="POST">
                    <textarea name="content" id="" cols="30" rows="3" placeholder="Share your thoughts"></textarea>
                    <input type="submit" value="Post">

          </form>
          <% } %>
          <div id="posts-list-container">
                <ul>
                        <% for(post of posts){%>
                                <li>
                                       <p>
                                        <small>
                                                <%= post.user.name %>
                                        </small>
                                        <br>
                                        <%= post.content %>                                    
                                       </p>
                                </li>
                        <%} %>
                </ul>
          </div>
    </section>